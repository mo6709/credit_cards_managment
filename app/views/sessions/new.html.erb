<h1>Log In</h1>
<%= form_tag(sessions_create_path, method: 'post') do%>
 <div class="field">
 	<%= label_tag 'name' %>
 	<%= text_field_tag 'name' %>
 </div>

 <div class="field">
 	<%= label_tag 'password' %>
 	<%= password_field_tag 'password' %>
 </div>

 <div class="action">
 	<%= submit_tag("Log In") %>
 </div>
<% end %>