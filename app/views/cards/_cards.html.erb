<div class="cards_list">
	<ul>
	    <% cards.each do |card|%>
		<li>
			<div class="container-fluid info floated card">
			<%= link_to(card.name, card_path(card.id), data: { id: "#{card.id}" }, class: "card_name")%> | 
			<%= link_to(card.c_type, cards_index_type_path(card.c_type)) %><br>
			<strong>Bonus: </strong><%= card.bonus %> 
			<%= admin_buttons_for(card) %> 
			<%= add_card(card)%>
			</div>
		</li> 
	    <% end %>
	</ul>
</div>

<script id="modalTemplate" type="text/x-handlebars-template" >
	<div class="modal" id="modalCard{{id}}">
		<div class="card-content">
		  <span class="close">&times;</span>
		  <h1>{{name}}</h1>
		  <div class="body">
		    {{c_type}}
		  </div>
		</div>
	</div>
</script>