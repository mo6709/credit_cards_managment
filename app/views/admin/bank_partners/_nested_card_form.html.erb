<div class="bank_partner_new_card_form">
	    <p>Add a new card</p>
	  	<%= builder.fields_for(:cards, card) do |card_builder| %>
	  	<%= card_builder.label :name, "Card Name:" %>
	  	<%= card_builder.text_field :name %><br>

	  	<%= card_builder.label :credit_needed, "Credit Needed:" %>
	  	<%= card_builder.text_field :credit_needed %><br>

	  	<%= card_builder.label "Business Card:" %>
	  	<%= card_builder.check_box :c_type %><br>

	  	<%= card_builder.label :bonus, "Bonus Info:" %><br>
	  	<%= card_builder.text_area :bonus %><br>

	  	<%= card_builder.label :apr, "APR Raite:" %>
	  	<%= card_builder.text_field :apr %><br>

	  	<%= card_builder.label :balance_transfer_apr,  "Balance Transfer APR %:"%>
	  	<%= card_builder.number_field :balance_transfer_apr %><br>

	  	<%= card_builder.label :balance_transfer_period, "Balance Transfer Period (Months):"%>
	  	<%= card_builder.number_field :balance_transfer_period %><br>

	  	<%= card_builder.label :anual_fee, "Anual Fee $"%>
	  	<%= card_builder.number_field :anual_fee %><br>

	  	<%= card_builder.label :corp_url, "Corp URL:" %><br>
	  	<%= card_builder.text_area :corp_url %><br>
	    
	    <%= card_builder.label :category, "Select Category:"%>
	  	<%= card_builder.collection_select(:category_id, Category.all, :id, :title, :include_blank => true ) %><br>
	  	<% end %>
</div>